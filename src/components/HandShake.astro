<style>
    .shake{
        animation: shake .4s linear;
        animation-iteration-count: 6;
    }
    @keyframes shake{
        0% , 100%{
            rotate : 0deg
        }
        50%{
            rotate: 40deg;
        }
    }
</style>
<script>
    const hand = document.getElementById("hand");
    window.addEventListener("load" , () => {
        if(hand)
            hand.classList.add("shake");
    })
</script>
