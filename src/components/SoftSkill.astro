---
interface Props{
    title : string,
    description : string,
    src : string,
    alt : string,
}
const {title , description , src , alt} = Astro.props;
---
<div class="bg-[hsl(220,20%,13%)] relative isolate rounded-lg p-4 overflow-hidden">
    <!--Blobs -->
    <div class="bg-indigo-500 bg-opacity-50 -z-10 absolute right-0 top-0 translate-x-1/2 -translate-y-1/2 w-28 aspect-square rounded-full blur-3xl"></div>
    <!-- -->
    <div class="bg-gradient-to-r from-yellow-200 via-red-400 to-indigo-400 w-12 p-2 mb-6 rounded-md">
        <img
            class="invert"
            src={src}
            alt={alt}
        />
    </div>
    <h3 class="text-2xl mb-2 font-normal">{title}</h3>
    <p class="font-light">
        {description}
    </p>
</div>