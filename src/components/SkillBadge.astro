---
interface Props{
    src : string,
    alt : string
}
const {src , alt} = Astro.props;
---
<div
    class="bg-gradient-to-b from-[hsl(240,25%,20%)] to-[hsl(220,20%,23%)] w-14 md:w-[3.8rem] p-3 md:p-[0.9rem] rounded-lg rotate-45"
>
    <img
        class="-rotate-45 w-full h-full max-w-xs"
        src={src}
        alt={alt}
    />
</div>
