---
import BubbleLink from "./BubbleLink.astro";
import Tag, { Names } from "./Tag.astro";
interface Props {
    data: {
        title: string;
        description: string;
        tags : string[]
        webLink: string;
        githubLink: string;
        src: string;
        alt: string;
    };
}
const { data } = Astro.props;
---
<style>
    .cut{
        background-image: linear-gradient(-5deg , hsl(220,20%,19%) 20% , transparent 20%);
    }
</style>
<article class="bg-[hsl(220,20%,19%)] border-neutral-300 flex flex-col border-opacity-50 border-[1.5px] rounded-md overflow-hidden">
    <div class="aspect-video relative">
        <img class="w-full h-full object-cover" src={data.src} alt={data.alt}>
        <div class="cut absolute inset-0"></div>
    </div>
    <div class="p-2 pb-4">
        <h1 class="font-medium mb-2">{data.title}</h1>
        <p class="opacity-80 text-sm font-light">{data.description}</p>
    </div>
    <div class="px-2 pb-2 grow flex flex-col justify-end">
        <div class="flex flex-wrap gap-2">
            {
                data.tags.map((e) => <Tag name={e as Names}/>)
            }
        </div>
    </div>
</article>
