---
import ArrowButton from "../components/ArrowButton.astro";
import ArrowLink from "../components/ArrowLink.astro";
import BubbleLink from "../components/BubbleLink.astro";
import Logo from "../components/Logo.astro";
---

<header
    class="py-4 max-w-[1200px] mx-auto flex flex-col gap-4 items-center md:flex-row md:justify-between"
>
    <Logo/>
    <nav>
        <ul class="flex gap-4 lg:hidden">
            <li>
                <BubbleLink><i class="fa-brands fa-instagram"></i></BubbleLink>
            </li>
            <li>
                <BubbleLink>
                    <i class="fa-brands fa-linkedin-in"></i>
                </BubbleLink>
            </li>
            <li>
                <BubbleLink><i class="fa-brands fa-github-alt"></i></BubbleLink>
            </li>
        </ul>
        <ul class="hidden gap-4 text-2xl lg:flex items-center">
            <li><ArrowLink>Inicio</ArrowLink></li>
            <li><ArrowLink href="#about">Sobre mi</ArrowLink></li>
            <li><ArrowLink href="#skills">Habilidades</ArrowLink></li>
            <li><ArrowLink href="#projects">Proyectos</ArrowLink></li>
            <li class="text-base"><ArrowButton href="#contact">Contacto</ArrowButton></li>
        </ul>
    </nav>
</header>
