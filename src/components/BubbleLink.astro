---
interface Props{
    href? : string
}
const {href = "#"} = Astro.props;
---
<a class="border-indigo-500 relative [&>div]:hover:scale-100 isolate border-2 w-10 md:w-11 aspect-square grid place-items-center rounded-full"  href={href}>
    <div class="bg-indigo-500 absolute inset-0 rounded-full -z-10 scale-0 transition-transform"></div>
    <span class="transition-colors text-base md:text-lg"><slot/></span>
</a>